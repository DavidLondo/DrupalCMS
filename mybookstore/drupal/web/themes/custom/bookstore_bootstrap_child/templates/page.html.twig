<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="{{ path('<front>') }}">{{ site_name }}</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarMain">
        {{ page.primary_menu }}
        <ul class="navbar-nav ms-auto">
          {% if logged_in %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('user.logout') }}">Cerrar sesión</a>
            </li>
          {% else %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('user.login') }}">Iniciar sesión</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ path('user.register') }}">Registrarse</a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
</header>

<main class="container mt-4">
  {{ page.content }}
</main>

<footer class="mt-5 bg-dark text-white py-3">
  <div class="container text-center">
    <p>&copy; {{ "now"|date("Y") }} Bookstore. Todos los derechos reservados.</p>
  </div>
</footer>
